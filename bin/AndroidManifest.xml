<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kakumapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <!-- Take user photo -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Store the photos -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Internet Services. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Network State Permissions to detect Internet status -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Must have a camera -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <!-- Not a must for the front camera -->
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />

    <application
        android:name="KakumaApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Kakuma" >
        <activity
            android:name=".Kakuma"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.kakumapp.Kakuma" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/register"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" >
            <intent-filter>
                <action android:name="com.kakumapp.Register" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterPhone"
            android:label="@string/register"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="com.kakumapp.RegisterPhone" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterName"
            android:label="@string/register"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="com.kakumapp.RegisterName" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterOrigin"
            android:label="@string/register"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="com.kakumapp.RegisterOrigin" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterPhoto"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="com.kakumapp.RegisterPhoto" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterSummary"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="com.kakumapp.RegisterSummary" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Registered"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="com.kakumapp.Registered" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Help"
            android:label="@string/help" >
            <intent-filter>
                <action android:name="com.kakumapp.Help" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MeetingPoints"
            android:label="@string/meetingPoints" >
            <intent-filter>
                <action android:name="com.kakumapp.MeetingPoints" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>