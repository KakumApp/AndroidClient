<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disabled -->
    <item android:state_enabled="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@android:color/white" android:startColor="@android:color/white" />

            <corners android:radius="8dp" />

            <stroke android:width="5px" android:color="@color/primary" />
        </shape></item>
    <!-- pressed -->
    <item android:state_enabled="true" android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/eighty_percent_white" android:startColor="@color/eighty_percent_white" />

            <corners android:radius="8dp" />

            <stroke android:width="5px" android:color="@color/primary" />
        </shape></item>
    <!-- focused -->
    <item android:state_focused="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/eighty_percent_white" android:startColor="@color/eighty_percent_white" />

            <corners android:radius="8dp" />

            <stroke android:width="5px" android:color="@color/primary" />
        </shape></item>
    <!-- default -->
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@android:color/white" android:startColor="@android:color/white" />

            <corners android:radius="8dp" />

            <stroke android:width="5px" android:color="@color/primary" />
        </shape></item>

</selector>