<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/options_layout"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="4dp"
        android:scrollbars="vertical" />

    <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:background="@color/primary"
        android:padding="8dp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="100" >

        <Button
            android:id="@+id/button_back"
            style="@style/Buttonkakuma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="50"
            android:background="@drawable/border_button_white_not_rounded"
            android:text="@string/back"
            android:textColor="@color/primary" />

        <Button
            android:id="@+id/button_search"
            style="@style/Buttonkakuma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="50"
            android:background="@drawable/border_button_not_rounded"
            android:text="@string/search_person"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_no_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/no_results"
        android:textColor="@color/dark_grey"
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>